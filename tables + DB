CREATE TABLE Reservation(
   reservation_id SMALLINT,
   reservation_date DATE NOT NULL,
   number_of_tickets SMALLINT NOT NULL,
   PRIMARY KEY(reservation_id)
);

CREATE TABLE Dinosaures(
   dinosaur_id SMALLINT,
   Common_name VARCHAR(50)  NOT NULL,
   diet VARCHAR(50)  NOT NULL,
   description VARCHAR(200)  NOT NULL,
   PRIMARY KEY(dinosaur_id)
);

CREATE TABLE Types_de_billet(
   ticket_types_id SMALLINT,
   title VARCHAR(50)  NOT NULL,
   Unit_price SMALLINT NOT NULL,
   PRIMARY KEY(ticket_types_id)
);

CREATE TABLE admin(
   user_id SMALLINT,
   name VARCHAR(50)  NOT NULL,
   password VARCHAR(50)  NOT NULL,
   PRIMARY KEY(user_id)
);

CREATE TABLE Reserve(
   reservation_id SMALLINT,
   ticket_types_id SMALLINT,
   PRIMARY KEY(reservation_id, ticket_types_id),
   FOREIGN KEY(reservation_id) REFERENCES Reservation(reservation_id),
   FOREIGN KEY(ticket_types_id) REFERENCES Types_de_billet(ticket_types_id)
);

CREATE TABLE Access(
   dinosaur_id SMALLINT,
   ticket_types_id SMALLINT,
   PRIMARY KEY(dinosaur_id, ticket_types_id),
   FOREIGN KEY(dinosaur_id) REFERENCES Dinosaures(dinosaur_id),
   FOREIGN KEY(ticket_types_id) REFERENCES Types_de_billet(ticket_types_id)
);

ALTER TABLE dinosaures ALTER COLUMN dinosaur_id ADD GENERATED BY DEFAULT AS IDENTITY;

DELETE FROM dinosaures;

